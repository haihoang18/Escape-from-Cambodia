{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build SDL2 Project",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++14",
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/background.cpp",
                "${workspaceFolder}/utils.cpp",
                "-o",
                "${workspaceFolder}/game",
                "-F/Library/Frameworks",
                "-framework",
                "SDL2",
                "-framework",
                "SDL2_image"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}